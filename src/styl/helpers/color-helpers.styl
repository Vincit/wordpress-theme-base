generateBackgroundClasses(addColor = 'true') {
  .bg {
    for key, value in colors {
      &--{key} {
        background: value

        if (addColor == 'true') {
          if (key == 'tangerine') { // Just an example override
            color: colors.white
          } else if (dark(value)) {
            color: colors.white
          } else {
            color: colors.black
          }
        }
      }
    }
  }
}

generateColorClasses() {
  .color {
    for key, value in colors {
      &--{key} {
        color: value;
      }
    }
  }
}

// These are functions because if a selector is more precise and defines
// a background color, .bg--white will not work.
